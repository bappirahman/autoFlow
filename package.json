{
  "name": "autoFlow",
  "private": true,
  "version": "0.1.0",
  "description": "Self-hosted workflow automation platform",
  "license": "MIT",
  "scripts": {
    "bootstrap": "pnpm -w install",
    "dev:api": "pnpm --filter ./apps/api... run start:dev",
    "dev:frontend": "pnpm --filter ./apps/frontend... run dev",
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:frontend\"",
    "lint": "pnpm -r run lint",
    "build": "pnpm -r run build",
    "test": "pnpm -w -r --filter ./apps/** run test",
    "prepare": "husky",
    "npkill": "pnpm dlx npkill --delete-all -y"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^9.1.7"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ]
}
